@model UserAccountSignUpModel
@{
	ViewData["Title"] = "SignUp";
}

<h5 class="bg-primary text-white text-center p-2">Sign Up</h5>
<form method="post" asp-controller="Identity" asp-action="SignUp">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label>User Name</label>
		<input class="form-control" asp-for="@Model.UserName" />
	</div>
	<div class="form-group">
		<label>Email</label>
		<input class="form-control" asp-for="@Model.Email" />
	</div>
	<div class="form-group">
		<label>Password</label>
		<input type="password" class="form-control" asp-for="@Model.Password" />
	</div>
	<div class="py-2">
		<button type="submit" class="btn btn-primary">Submit</button>
		<a class="btn btn-secondary" asp-page="/Index">Back</a>
	</div>
</form>